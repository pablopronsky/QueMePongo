String _getSuggestedClothing({
    required double temperature,
    required String mainCondition,
    required String timeOfDay,
  }) {
    // Implementar la lógica para sugerir ropa según la temperatura,
    // la condición meteorológica y el tiempo del día
    if (timeOfDay == "día") {
      if (temperature < 10) {
        return "campera, remera, pantalón largo, medias";
      } else if (temperature < 20) {
        return "campera, remera, pantalón corto, medias";
      } else {
        return "remera, pantalón corto, sandalias";
      }
    } else {
      if (temperature < 10) {
        return "campera, pantalón largo, medias, gorro, bufanda";
      } else if (temperature < 20) {
        return "campera, pantalón largo, medias";
      } else {
        return "remera, pantalón largo, medias";
      }
    }
  }